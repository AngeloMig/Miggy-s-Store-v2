
<div class="inner-section" style="background-color: {{ section.settings.color_bg }}; color: {{ section.settings.color_text }};">
  <div class="hun-container">
    <div class="hun-row">
      <div class="hun-col text-section">
        {% if section.settings.title != blank %}
          <h3 class="title-section section-header__title">
            {{ section.settings.title }}
          </h3>
        {% endif %}
        
        {% if section.settings.description != blank %}
          <div class="des-section">
            {{ section.settings.description }}
          </div>
        {% endif %}

        {% if section.settings.button_label != blank %}
          <div class="buttons-section">
            <a class="btn-section" href="{{ section.settings.button_link }}"  style="background-color: {{ section.settings.color_text }};">
              {{ section.settings.button_label }}
            </a>
          </div>
        {% endif %}
      </div>

      <div class="hun-col pic-section">
        <div class="wrap-pic" style="max-width: {{- section.settings.image_width -}}px;">
            {%- if section.settings.image != blank -%}
              <img src="{{ section.settings.image | img_url: 'master' }}" alt="{{ section.settings.image.alt }}">
            {%- else -%}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- endif -%}
          </div>
      </div>
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Image text background",
    "class": "image-text-background",
    "settings": [
      {
        "type": "richtext",
        "id": "title",
        "label": "Title",
        "default": "<p>Image text background</p>"
      },
      {
        "type": "richtext",
        "id": "description",
        "label": "Description",
        "default": "<p>Section description</p>"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label",
        "default": "Button"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "range",
        "id": "image_width",
        "label": "Image width",
        "default": 750, 
        "min": 100,
        "max": 750,
        "step": 10,
        "unit": "px"
      },
      {
        "type": "color",
        "id": "color_bg",
        "label": "Background color",
        "default": "#FFDFCE"
      },
      {
        "type": "color",
        "id": "color_text",
        "label": "Text color",
        "default": "#181800"
      }
    ],
    "presets": [
      {
        "name": "Image text background",
        "category": "Kankan section"
      }
    ]
  }
{% endschema %}
