

<div class="inner-section">
  <div class="hun-container">
    <div class="hun-row {% if section.blocks.size < 3 %}
                          has-1-col
                        {% elsif section.blocks.size < 5 and section.blocks.size > 2 %}
                          has-2-col
                        {% else %}
                          has-3-col
                        {% endif %}">

      
      <div class="hun-col col-left">
        {%- for block in section.blocks offset:0 -%}
          {% if forloop.index == 3 %}{% break %}{% endif %}
          <div class="item-gal set-{{- block.settings.text_pos -}}-text">
            {% if block.settings.link_item != blank %}
              <a href="{{ block.settings.link_item }}" class="link-item"></a>
            {% endif %}

            <div class=" holder-image index-{{- forloop.index -}}" {% if block.settings.image != blank %}style="background-image: url({{ block.settings.image | img_url: '1200x1200' }});"{% endif %}></div>

            {% if block.settings.text_pos != 'no' %}
              
              <div class="text-item" style="background-color: {{ block.settings.bg_color }};">
                {% if block.settings.subtitle != blank %}
                  <div class="subtitle-item">
                    {{ block.settings.subtitle }}
                  </div>
                {% endif %}

                {% if block.settings.title != blank %}
                  <h3 class="title-item" style="max-width: {{- block.settings.title_max_w -}}px;">
                    {{ block.settings.title }}
                  </h3>
                {% endif %}

                {% if block.settings.description != blank %}
                  <div class="des-item" style="max-width: {{- block.settings.description_max_w -}}px;">
                    {{ block.settings.description }}
                  </div>
                {% endif %}
              </div>

            {% endif %}
          </div>
        {%- endfor -%}
      </div>

      {% if section.blocks.size > 2 %}
        <div class="hun-col col-center">
          {%- for block in section.blocks offset:2 -%}
            {% if forloop.index == 3 %}{% break %}{% endif %}
            <div class="item-gal set-{{- block.settings.text_pos -}}-text">
              {% if block.settings.link_item != blank %}
                <a href="{{ block.settings.link_item }}" class="link-item"></a>
              {% endif %}

              <div class=" holder-image index-{{- forloop.index | plus: 2 -}}" {% if block.settings.image != blank %}style="background-image: url({{ block.settings.image | img_url: '1200x1200' }});"{% endif %}></div>

              {% if block.settings.text_pos != 'no' %}
                
                <div class="text-item" style="background-color: {{ block.settings.bg_color }};">
                  {% if block.settings.subtitle != blank %}
                    <div class="subtitle-item">
                      {{ block.settings.subtitle }}
                    </div>
                  {% endif %}

                  {% if block.settings.title != blank %}
                    <h3 class="title-item" style="max-width: {{- block.settings.title_max_w -}}px;">
                      {{ block.settings.title }}
                    </h3>
                  {% endif %}

                  {% if block.settings.description != blank %}
                    <div class="des-item" style="max-width: {{- block.settings.description_max_w -}}px;">
                      {{ block.settings.description }}
                    </div>
                  {% endif %}
                </div>

              {% endif %}
            </div>
          {%- endfor -%}
        </div>
      {% endif %}

      {% if section.blocks.size > 4 %}
        <div class="hun-col col-right">
          {%- for block in section.blocks offset:4 -%}
            <div class="item-gal set-{{- block.settings.text_pos -}}-text">
              {% if block.settings.link_item != blank %}
                <a href="{{ block.settings.link_item }}" class="link-item"></a>
              {% endif %}

              <div class=" holder-image index-{{- forloop.index | plus: 4 -}}" {% if block.settings.image != blank %}style="background-image: url({{ block.settings.image | img_url: '1200x1200' }});"{% endif %}></div>

              {% if block.settings.text_pos != 'no' %}
                
                <div class="text-item" style="background-color: {{ block.settings.bg_color }};">
                  {% if block.settings.subtitle != blank %}
                    <div class="subtitle-item">
                      {{ block.settings.subtitle }}
                    </div>
                  {% endif %}

                  {% if block.settings.title != blank %}
                    <h3 class="title-item" style="max-width: {{- block.settings.title_max_w -}}px;">
                      {{ block.settings.title }}
                    </h3>
                  {% endif %}

                  {% if block.settings.description != blank %}
                    <div class="des-item" style="max-width: {{- block.settings.description_max_w -}}px;">
                      {{ block.settings.description }}
                    </div>
                  {% endif %}
                </div>

              {% endif %}
            </div>
          {%- endfor -%}
        </div>
      {% endif %}
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Gallery masonry",
    "class": "gallery-masonry",
    "max_blocks": 6,
    "blocks": [
      {
        "type": "image_block",
        "name": "Item",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "select",
            "id": "text_pos",
            "label": "Text position",
            "default": "no",
            "options": [
              {
                "value": "no",
                "label": "No text"
              },
              {
                "value": "top",
                "label": "Top"
              },
              {
                "value": "left",
                "label": "Left"
              },
              {
                "value": "right",
                "label": "Right"
              },
              {
                "value": "bottom",
                "label": "Bottom"
              }
            ]
          },
          {
            "type": "text",
            "id": "subtitle",
            "label": "Subtitle",
            "default": "Subtitle"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Title"
          },
          {
            "type": "range",
            "id": "title_max_w",
            "label": "Title max width",
            "default": 240,
            "min": 50,
            "max": 600,
            "step": 10,
            "unit": "px"
          },
          {
            "type": "richtext",
            "id": "description",
            "label": "Description",
            "default": "<p>Description</p>"
          },
          {
            "type": "range",
            "id": "description_max_w",
            "label": "Description max width",
            "default": 240,
            "min": 50,
            "max": 600,
            "step": 10,
            "unit": "px"
          },
          {
            "type": "color",
            "id": "bg_color",
            "label": "Background color",
            "default": "#FFF6E2"
          },
          {
            "type": "url",
            "id": "link_item",
            "label": "Item link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Gallery masonry",
        "category": "Kankan section",
        "blocks": [
          {
            "type": "image_block"
          },
          {
            "type": "image_block"
          },
          {
            "type": "image_block"
          },
          {
            "type": "image_block"
          },
          {
            "type": "image_block"
          },
          {
            "type": "image_block"
          }
        ]
      }
    ]
  }
{% endschema %}
