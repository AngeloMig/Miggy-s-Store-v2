<div class="inner-section">
  <div class="hun-container">
    {% if section.settings.section_title != blank %}
      <h3 class="title-section section-header__title" style="max-width: {{- section.settings.title_width -}}px;">
        {{ section.settings.section_title }}
      </h3>
    {% endif %}

    <div class="hun-row {{ section.settings.num_column }}">
      {%- for block in section.blocks -%}
      
        <div class="hun-col">
          <div class="sec-item">
            <div class="pic-item">
              <span class="holder-pic" {% if block.settings.image != blank %}
                style="background-image: url({{ block.settings.image | img_url: 'master' }});" 
              {% endif %}></span>
            </div>

            <div class="text-item">
              {%- if block.settings.item_title != blank -%}
                <h4 class="title-item">
                  {{ block.settings.item_title }}
                </h4>
              {%- endif -%}

              {%- if block.settings.button_label != blank -%}
                <div class="buttons-item">
                  <a class="btn-item" href="{{ block.settings.button_link }}">{{ block.settings.button_label }}</a>
                </div>
              {%- endif -%}
            </div>
          </div>
        </div>

      {%- endfor -%}
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Image text button column",
    "class": "image-text-button-column",
    "settings": [
      {
        "type": "text",
        "id": "section_title",
        "label": "Section title",
        "default": "Image text button column"
      },
      {
        "type": "range",
        "id": "title_width",
        "label": "Title width",
        "default": 1260,
        "min": 100,
        "max": 1260,
        "step": 20,
        "unit": "px"
      },
      {
        "type": "select",
        "id": "num_column",
        "label": "Number of columns",
        "default": "set-3-col",
        "options": [
          {
            "value": "set-2-col",
            "label": "2 column"
          },
          {
            "value": "set-3-col",
            "label": "3 column"
          },
          {
            "value": "set-4-col",
            "label": "4 column"
          },
          {
            "value": "set-5-col",
            "label": "5 column"
          }
        ]
      }
    ],
    "blocks": [
      {
        "type": "image_block",
        "name": "Item",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "item_title",
            "label": "Item title",
            "default": "Example title"
          },
          {
            "type": "text",
            "id": "button_label",
            "label": "Button label",
            "default": "Button"
          },
          {
            "type": "url",
            "id": "button_link",
            "label": "Button link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Image text button column",
        "category": "Kankan section",
        "blocks": [
          {
            "type": "image_block"
          },
          {
            "type": "image_block"
          },
          {
            "type": "image_block"
          }
        ]
      }
    ]
  }
{% endschema %}
